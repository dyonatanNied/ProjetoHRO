<p style="color: green"><%= notice %></p>
<!-- link tag referente aos arquivos css -->
<%= stylesheet_link_tag "button", "user" %>
<!-- header -->
<%= render 'shared/header' %>

<div class="row-fluid">
  <div class="span4" style="padding: 1%; background-color: #ffffff;">
    <b><p style="text-align: center; font-size: 24px; font-family: cambria; color: #3268cc; 
        text-decoration: underline;"><big>Usuário Cadastrado</big></p></b>
  </div>
</div>

<!-- editar usuário, deletar usuário e voltar para a página anterior -->
<div class="position3">
  <%= link_to "EDITAR USUÁRIO", edit_user_path(@user), :class => "button" %>
  <%= button_to "DELETAR USUÁRIO", @user, method: :delete, :class => "button" %>
  <%= link_to "VOLTAR", users_path, :class => "button"%>
</div>

<!-- renderiza o user -->
<div class="strong5">
  <%= render @user %>
</div>

<br><br>
