<%= stylesheet_link_tag "button", "user" %>
<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class="campo3">
    <b><%= form.label :"Atenção: preencha todas as informações abaixo!!!", 
    style: "position: relative; left: 7px; font-size: 15px; color: red;" %></b><br><br>

    <%= form.label :"Nome Completo:", style: "display: block" %>
    <%= form.text_area :name, :cols => 80, :rows => 1 %><br>

    <%= form.label :"Email:", style: "display: block" %>
    <%= form.text_area :email, :cols => 80, :rows => 1 %><br>

    <%= form.label :"Setor:", style: "display: block" %>
    <%= form.text_area :sector, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Função:", style: "display: block" %>
    <%= form.text_area :function, :cols => 45, :rows => 1 %><br>

    <%= form.label :"COREN:", style: "display: block" %>
    <%= form.text_area :coren, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Telefone:", style: "display: block" %>
    <%= form.text_area :phone, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Rua:", style: "display: block" %>
    <%= form.text_area :street, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Complemento:", style: "display: block" %>
    <%= form.text_area :address_complement, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Bairro:", style: "display: block" %>
    <%= form.text_area :district, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Cidade:", style: "display: block" %>
    <%= form.text_area :city, :cols => 45, :rows => 1 %><br>

    <%= form.label :"Estado:", style: "display: block" %>
    <%= form.select :state, ['AC', 'AL', 'AP', 'AM', 'BA', 'CE', 'DF', 'ES', 'GO', 'MA', 'MT', 'MS', 
    'MG', 'PA', 'PB', 'PR', 'PE', 'PI', 'RJ', 'RN', 'RS', 'RO', 'RR', 'SC', 'SP', 'SE', 'TO'] %><br>
    <br>
  </p>

  <div class="strong2">
    <%= form.submit 'SALVAR', :class => "button" %>
    <%= link_to "CANCELAR", inicial_path, :class => "button" %>
  </div>
  <br>
<% end %>