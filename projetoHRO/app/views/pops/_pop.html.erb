  <%= raw pop.descricao %>
</div>

<div class="box3">
  <b>Cálculos:</b>
  <%= raw pop.calculos %>
</div>

<div class="box3">
  <b>Resultados:</b>
  <%= raw pop.resultados %>
</div>

<div class="box3">
  <b>Comentários:</b>
  <%= raw pop.comentarios %>
</div>

<div class="box3">
  <b>Responsabilidade:</b>
  <%= raw pop.responsabilidade %>
</div>

<div class="box3">
