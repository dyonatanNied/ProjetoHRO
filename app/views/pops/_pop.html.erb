<%= stylesheet_link_tag "button", "pop", "table_signature", "show_pop" %>
<div id="<%= dom_id pop %>">
<br>
<div class="campo_title">
  <th><b>Título:</b></th>
  <td><%= pop.titulo %></td>
</div>

<div class="campo_title">
  <th><b>Número do POP:</b></th>
  <td><%= pop.pop_number %></td>
</div>

<div class="campo_title">
  <th><b>Setor do POP:</b></th>
  <td><%= pop.pop_sector %></td>
</div>

<div class="campo_text">
  <th><b>Objetivo:</b></th>
  <td><%= pop.objetivo %></td>
</div>

<div class="campo_text">
  <th><b>Amostra:</b></th>
